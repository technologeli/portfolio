---
export interface Props {
    title: string;
    sub?: string;
    body: string;
    href: string;
}

const { href, title, body, sub } = Astro.props;
---

<li
    class="h-48 w-96 snap-start rounded-lg border border-gray-200 dark:border-gray-800"
>
    <a href={href} target="_blank" class="grid h-full w-full gap-4 p-4">
        <div>
            <h2
                class="bg-gradient-to-br from-primary-1 to-primary-2 bg-clip-text text-2xl font-bold text-transparent dark:from-secondary-1 dark:to-secondary-2"
            >
                {title}
                <span>&rarr;</span>
            </h2>
            {sub && <h3 class="font-thin">{sub}</h3>}
        </div>
        <p>
            {body}
        </p>
    </a>
</li>
